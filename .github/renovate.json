{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>vernaillen/renovate-config"
  ],
  "assignees": [
    "vernaillen"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "vitest"
      ],
      "allowedVersions": "<=0.33"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "cimg/node"
      ],
      "allowedVersions": "<=18.18"
    }
  ]
}
