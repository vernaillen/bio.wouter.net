{
  "version": "1.2.0",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt build && nuxt preview",
    "postinstall": "nuxt prepare",
    "typecheck": "nuxi typecheck",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "cy:dev": "start-server-and-test dev http://localhost:3000 'cypress open --config baseUrl=http://localhost:3000'",
    "cy:local": "start-server-and-test preview http://localhost:3000 'cypress run --config baseUrl=http://localhost:3000'",
    "fulltest": "rm -rf node_modules && pnpm i && pnpm run lint && pnpm run coverage && pnpm run cy:local",
    "release:patch": "npx release-it patch --ci",
    "release:minor": "npx release-it minor --ci",
    "release:major": "npx release-it major --ci"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.4.7",
    "@twicpics/components": "^0.15.1",
    "animate.css": "^4.1.1",
    "dayjs": "^1.11.7",
    "vue-gtag": "^2.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.36.0",
    "@nuxt/image-edge": "1.0.0-27968280.9739e4d",
    "@nuxt/test-utils": "^3.3.1",
    "@nuxtjs/color-mode": "^3.2.0",
    "@nuxtjs/tailwindcss": "6.6.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitest/coverage-c8": "^0.29.3",
    "cypress": "^12.8.1",
    "eslint": "^8.36.0",
    "eslint-plugin-vue": "^9.9.0",
    "jsdom": "^21.1.1",
    "nuxt": "3.3.1",
    "nuxt-icon": "^0.3.3",
    "release-it": "^15.9.0",
    "start-server-and-test": "^2.0.0",
    "typescript": "^5.0.2",
    "vitest": "^0.29.3",
    "vue-tsc": "^1.2.0"
  },
  "eslintConfig": {
    "extends": "@antfu"
  },
  "release-it": {
    "git": {
      "commit": true,
      "tag": true,
      "push": true,
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": false
    }
  }
}
